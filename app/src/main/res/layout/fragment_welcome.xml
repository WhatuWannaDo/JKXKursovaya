<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MVVM.View.FirstTime.welcomeFragment">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="300dp"
        android:layout_height="93dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="56dp"
        android:text='Добро пожаловать в приложение по учету коммунальных услуг. Для начала нам необходимо узнать немного о вас. Для продолжения нажмите "Далее".'
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/welcomeNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="184dp"
        android:text="Далее"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />
</androidx.constraintlayout.widget.ConstraintLayout>